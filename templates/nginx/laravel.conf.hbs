{{!--
  Laravel Nginx Configuration Template

  This template is compiled by Local's ConfigTemplatesService.
  Variables available:
    - site: The site object (id, name, domain, path, services, mysql, etc.)
    - port: The allocated HTTP port
    - phpSocket: Path to PHP-FPM socket
    - absoluteSitePath: Resolved absolute path to site

  Laravel-specific considerations:
    - Web root is {sitePath}/app/public (Laravel's public directory)
    - All requests route through index.php (front controller pattern)
    - Sensitive files (.env, etc.) must be denied
--}}

server {
    listen 127.0.0.1:{{port}};
    server_name {{site.domain}};

    # Laravel's public directory is the web root
    root {{{absoluteSitePath}}}/app/public;
    index index.php index.html index.htm;

    # UTF-8 charset
    charset utf-8;

    # Logging
    access_log {{{absoluteSitePath}}}/logs/nginx-access.log;
    error_log {{{absoluteSitePath}}}/logs/nginx-error.log;

    # Max upload size (Laravel's default is 2MB, increase for file uploads)
    client_max_body_size 64M;

    # Laravel front controller pattern
    # All requests that don't match a file go to index.php
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # PHP handling via Local's PHP-FPM
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:{{{phpSocket}}};
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        include fastcgi_params;

        # Increase timeouts for long-running scripts
        fastcgi_read_timeout 300;
        fastcgi_send_timeout 300;
    }

    # Security: Deny access to hidden files (except .well-known)
    location ~ /\.(?!well-known).* {
        deny all;
    }

    # Security: Deny access to sensitive Laravel files
    location ~ /\.env {
        deny all;
    }

    location ~ /composer\.(json|lock)$ {
        deny all;
    }

    location ~ /package(-lock)?\.json$ {
        deny all;
    }

    # Security: Deny access to Laravel internals
    location ~ ^/(artisan|server\.php)$ {
        deny all;
    }

    # Deny access to storage and bootstrap/cache directories
    # (These should never be web-accessible)
    location ~ ^/storage/ {
        deny all;
    }

    # Static file caching
    location ~* \.(css|js|gif|ico|jpeg|jpg|png|svg|woff|woff2|ttf|eot|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Robots.txt and favicon
    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    location = /robots.txt {
        access_log off;
        log_not_found off;
    }

    # Health check endpoint (useful for load balancers, monitoring)
    location = /up {
        access_log off;
        try_files $uri /index.php?$query_string;
    }
}
