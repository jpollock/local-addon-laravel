{
  "name": "@flavius/local-laravel",
  "productName": "Local Laravel",
  "version": "0.0.1",
  "description": "First-class Laravel development environment for Local. Create, develop, and manage Laravel applications with the same ease as WordPress sites.",
  "keywords": [
    "local-addon",
    "laravel",
    "php",
    "artisan",
    "composer",
    "development"
  ],
  "author": "Flavius Labs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/flavius-labs/local-laravel.git"
  },
  "bugs": {
    "url": "https://github.com/flavius-labs/local-laravel/issues"
  },
  "homepage": "https://github.com/flavius-labs/local-laravel#readme",
  "main": "lib/main.js",
  "renderer": "lib/renderer.js",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run create-entry-points",
    "compile": "tsc -p .",
    "create-entry-points": "echo \"module.exports = require('./main/index').default || require('./main/index');\" > lib/main.js && echo \"module.exports = require('./renderer/index').default || require('./renderer/index');\" > lib/renderer.js",
    "clean": "rm -rf lib",
    "watch": "tsc -p . --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit",
    "precommit": "npm run lint && npm run typecheck && npm test",
    "install-addon": "ln -sf \"$(pwd)\" \"$HOME/Library/Application Support/Local/addons/local-addon-laravel\"",
    "uninstall-addon": "rm -f \"$HOME/Library/Application Support/Local/addons/local-addon-laravel\"",
    "download-composer": "curl -sS https://getcomposer.org/download/latest-stable/composer.phar -o vendor/composer.phar && chmod +x vendor/composer.phar"
  },
  "engines": {
    "local": ">=9.0.0"
  },
  "localAddon": {
    "minimumLocalVersion": "9.0.0",
    "type": "addon",
    "category": "developer-tools"
  },
  "devDependencies": {
    "@getflywheel/local": "^6.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@getflywheel/local-components": "^16.0.0",
    "fs-extra": "^11.2.0",
    "npm": "^11.0.0",
    "zod": "^3.22.4"
  }
}
